{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@graphql/*": ["graphql/*"]
    }
  },
  "include": ["src", "graphql"],
  "exclude": ["node_modules", "dist"]
}
