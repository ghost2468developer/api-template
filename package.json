{
  "name": "api-template",
  "version": "1.0.0",
  "description": "Node.js + TypeScript + GraphQL + Prisma backend",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "apollo-server": "^3.13.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.16.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.5.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
